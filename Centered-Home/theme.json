{
  "name": "Centered Home - Extended",
  "description": "This is a Fork of EMERALD#0874's Theme Centered Home, which also works with resolutions other than that of the Steam Deck. All Credit for this Theme goes to EMERALD#0874.",
  "author": "Clemens",
  "target": "Home",
  "version": "v1.1",
  "manifest_version": 2,
  "inject": { "shared.css": ["SP"] },
  "patches": {
    "Hide Header": {
      "default": "Yes, center on games",
      "type": "dropdown",
      "values": {
        "Yes, center on games": { "hide-header.css": ["SP"] },
        "Yes, center on all": {
          "hide-header.css": ["SP"],
          "center-hidden-header.css": ["SP"]
        },
        "No": {}
      }
    },
    "Force Header to Stay Visible": {
      "default": "No",
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": { "force-header.css": ["SP"] }
      }
    },
    "Expand when docked": {
      "default": "Yes",
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": { "docked.css": ["SP"] }
      }
    }
  }
}
